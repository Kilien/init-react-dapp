root = true

# 所有文件通用配置
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

# TypeScript/JavaScript/JSON 文件配置
[*.{ts,tsx,js,jsx,json}]
indent_style = space
indent_size = 2
quote_type = single

# Markdown 文件配置
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# YAML 文件配置
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# CSS/SCSS/LESS 文件配置
[*.{css,scss,less}]
indent_style = space
indent_size = 2

# 配置文件特殊配置
[{package.json,.prettierrc,.eslintrc.json}]
indent_style = space
indent_size = 2
